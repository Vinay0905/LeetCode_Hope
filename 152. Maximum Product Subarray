class Solution {
public:
    int maxProduct(vector<int>& nums) {
        int maxProd = nums[0];
        int currMax = nums[0];
        int currMin = nums[0];

        for (int i = 1; i < nums.size(); i++) {
            int num = nums[i];

            if (num < 0)
                swap(currMax, currMin); // because negative can flip max â†” min

            currMax = max(num, currMax * num);
            currMin = min(num, currMin * num);

            maxProd = max(maxProd, currMax);
        }

        return maxProd;
    }
};
