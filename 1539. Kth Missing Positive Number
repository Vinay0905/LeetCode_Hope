class Solution {
public:
    int findKthPositive(vector<int>& arr, int k) {
        int size=arr.size(),j=0,current=1;
        vector<int> missing;
        while (missing.size() < k) {
            if (j < size && arr[j] == current) {
                j++; 
            } else {
                missing.push_back(current); 
            }
            current++;
        }

        
        //for (int m : missing) {
        //    cout << m << " ";
        //}

        return missing[k-1];
    }
};
